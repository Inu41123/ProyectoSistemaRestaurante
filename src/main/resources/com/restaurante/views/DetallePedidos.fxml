<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.restaurante.controllers.DetallePedidosController"
            prefHeight="400.0" prefWidth="800.0">

    <VBox spacing="10" style="-fx-padding: 15;">
        <Label text="Detalle de Pedidos" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

        <TableView fx:id="tablaDetallePedidos" prefHeight="350">
            <columns>
                <TableColumn fx:id="colDetalleId" text="Pedido ID" prefWidth="80"/>
                <TableColumn fx:id="colDetalleCliente" text="Cliente" prefWidth="150"/>
                <TableColumn fx:id="colDetalleFecha" text="Fecha" prefWidth="160"/>
                <TableColumn fx:id="colDetallePlato" text="Plato" prefWidth="150"/>
                <TableColumn fx:id="colDetalleCantidad" text="Cantidad" prefWidth="80"/>
                <TableColumn fx:id="colDetalleSubtotal" text="Subtotal" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>